{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "api/lib",
    "sourceMap": false,
    "jsx":"react",
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "files": [
    "src/index.ts",
    "typings.custom/index.d.ts"
  ]
}
